const pwModel = require('../models/password');

module.exports = (req, res, next) => {
    if (!pwModel.validate(req.body.password)) {
        res.status(400).json({ message: 'Password entre 9 et 18 caract√®res contenant au moins une majuscule, une minuscule et un chiffre.' });
    } else {
        next();
    }
};